<div class="form-row members members">
  {{!-- If a family has members, then display them --}}
  {{#if singleFamilyData.members}}
    {{#each singleFamilyData.members}}
    <div class="card col-sm col-lg-4 col-md-3" style="width: 18rem;">
      <div class="card-header bg-primary">
        Member Infos
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">First Name: {{this.firstName}}</li>
        <li class="list-group-item">Family Name: {{this.lastName}}</li>
        <li class="list-group-item">Date Of Birth: {{this.dateOfBirth}}</li>
      </ul>

      <div style="padding: 10px;">
        <button class="delete-member btn btn-danger" data-id="{{id}}">Delete</button>
      </div>
    </div>
    {{/each}}
      {{else}}
    <div style="color:white">No Memberes Yet</div>
  {{/if}}
</div>
<button class="btn btn-primary show-add-member-box">Add Member</button>

<form class="add-member-form" hidden>
  <div class="form-row">
    <div class="col-md-4 mb-3">
      <label for="validationDefault01" class="form-content">First name</label>
      <input type="text" class="form-control memberFirstName" id="validationDefault01" placeholder="First name" required>
    </div>
    <div class="col-md-4 mb-3">
      <label for="validationDefault02"  class="form-content">Last name</label>
      <input type="text" class="form-control memberLastName" id="validationDefault02" placeholder="Last name"  required>
    </div>
    <div class="col-md-4 mb-3">
      <label for="validationDefault03"  class="form-content">Date Of Birth</label>
      <input type="text" class="form-control memberDateOfBirth" id="validationDefault03" placeholder="Date Of Birth" required>
    </div>
  </div>
  <button class="btn btn-primary add-member" type="submit">Submit form</button>
</form>

<script src="/javascript/add-member.js"></script>
