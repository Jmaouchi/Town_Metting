<div class="event-context">
  <div class="head">
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
    <a class="navbar-brand" href="/"><img src="/images/Screenshot 2023-04-10 112519.png" alt="" width="100" ></a>
    <button class="navbar-toggler navbar-little-icon" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon active"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="/" id="home">Retour à l'accueil  <i class="fa-solid fa-backward"></i></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/commity" id="nav-link-padding">Comité <i class="fa-solid fa-users"></i></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/help">Aide villageois  <i class="fa-regular fa-calendar-days"></i></a>
        </li>
        <li>
          <div class="col-auto input-field">
            <button type="submit" class="btn btn-primary mb-2 btn-show-hidden-event-box active nav-link text-light">Ajouter Un Evenement</button>
          </div>
        </li>
      </ul>
    </div>
    </nav>
  </div>

  <div class="sections">
    <div class="container events">
      {{#each eventData}}
        <div class="card border-dark mb-3 event-member-content" style="max-width: 18rem;">
          <div class="card-header"><span class="member-span">Nome De L'événement:</span> {{eventName}}</div>
          <div class="card-body text-dark">
            <p class="card-title"><span class="member-span">Lieu</span> {{eventAdress}}</p>
            <p class="card-text"><span class="member-span">Description</span>: {{description}}</p>
            <p><span class="member-span">Date:</span> {{eventDate}}</p>
            <div style="padding: 10px;">
              <button class="delete-event btn btn-danger" data-id="{{id}}">Suprimer L'événement</button>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
  <div class="add-event" hidden>
    <form>
      <div class="form-row">
        <div class="col input-field">
          <input type="text" class="form-control code" placeholder="Code d'administrateur">
        </div>
        <div class="col input-field">
          <input type="text" class="form-control eventName" placeholder="eventName">
        </div>
        <div class="col input-field">
          <input type="text" class="form-control eventAddress" placeholder="eventAddress">
        </div>
        <div class="col input-field">
          <input type="text" class="form-control eventDate" placeholder="eventDate">
        </div>
          <div class="col input-field">
          <textarea type="text" class="form-control description text-area" placeholder="description"></textarea>
        </div>
        <div class="col-auto input-field">
          <button type="submit" class="btn btn-primary mb-2 event-submit-btn">Soumettre</button>
          <button type="button" class="btn btn-primary mb-2 bg-danger close-box">Fermer</button>
        </div>
      </div> 
    </form>
  <div>
</div>


<script src="/javascript/delete-event.js"></script>
<script src="/javascript/add-event.js"></script>
<script src="/javascript/search-family.js"></script>